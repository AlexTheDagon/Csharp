@model MedicalAppointments.Models.Doctor

@{
    ViewData["Title"] = "Doctor page";
}

<div class="border-top border-bottom text-muted  text-center">
    <h1 class="display-4">Doctor</h1>
</div>

<br />
<h5 class="text-muted text-center">Details</h5>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(doctor => doctor.Mail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(doctor => doctor.Mail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(doctor => doctor.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(doctor => doctor.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(doctor => doctor.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(doctor => doctor.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(doctor => doctor.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(doctor => doctor.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(doctor => doctor.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(doctor => doctor.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(doctor => doctor.Rating)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(doctor => doctor.Rating)
        </dd>
    </dl>
</div>

<form>
    <table>
        <td>
            <a  class="btn btn-light" style="border: 3px solid #009999" asp-controller="Doctors" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        </td>
        <td>
            <a style="border: 3px solid #009999" value="seeAppointments" class="btn btn-light" asp-controller="Appointments" asp-action="AppointmentsDoctor" asp-route-id="@Model.Id">See appointments</a>
        </td>
    </table>
</form>
<br />
<br/>

<form method="post" name="registration" class="register" asp-controller="Login" asp-action="LogoutDoctor">
    <div>
        <input type="submit" value="Logout" class="btn btn-danger" />
    </div>
</form>

