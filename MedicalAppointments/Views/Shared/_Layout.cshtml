<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MainPage</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav style="background-color: #004d4d" class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">eMedical</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if (MedicalAppointments.Data.Static.Helper.loginAdmin == true)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Pacients" asp-action="Index">Patients</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Doctors" asp-action="Index">Doctors</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Appointments" asp-action="Index">Appointments</a>
                            </li>
                        }
                    </ul>
                    @if (MedicalAppointments.Data.Static.Helper.role == 0) //nimeni nu e logat
                    {
                        <form style="padding-right: 15px" class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="PageLogin">Login</a>
                        </form>
                    }
                    else
                    {
                        @if (MedicalAppointments.Data.Static.Helper.role == 2) //pacient

                        {
                            <form style="padding-right: 15px" class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="PacientPage">Account</a>
                            </form>
                        }
                        else
                        {
                            @if ((MedicalAppointments.Data.Static.Helper.role == 3)) //doctor
                            {
                                <form style="padding-right: 15px" class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="DoctorPage">Account doctor</a>
                                </form>

                            }
                            else
                            {
                                <form style="padding-right: 15px" class="nav-item">
                                    <a class="nav-link text-white" asp-area="" asp-controller="Login" asp-action="AdminPage">Admin</a>
                                </form>

                            }

                        }
                    }

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - eMedical - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
