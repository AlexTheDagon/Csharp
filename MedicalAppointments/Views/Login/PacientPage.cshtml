@model MedicalAppointments.Models.Pacient
@{
    ViewData["Title"] = "Pacient page";
}

<div class="border-top border-bottom text-muted  text-center">
    <h1 class="display-4">Welcome to your account,  @Html.DisplayFor(pacient => pacient.Name)</h1>
</div>
<br />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(pacient => pacient.Mail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(pacient => pacient.Mail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(pacient => pacient.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(pacient => pacient.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(pacient => pacient.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(pacient => pacient.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(pacient => pacient.Age)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(pacient => pacient.Age)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(pacient => pacient.Observation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(pacient => pacient.Observation)
        </dd>
        <dt class="col-sm-2">
    </dl>
</div>

<form>
    <table>
        <td>
            <a class="btn btn-light" style="border: 3px solid #009999" asp-controller="Pacients" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        </td>
        <td>
            <a style="border: 3px solid #009999" value="seeAppointments" class="btn btn-light" asp-controller="Appointments" asp-action="AppointmentsPacient" asp-route-id="@Model.Id">See appointments</a>
        </td>
    </table>
</form>
<br />
<br />

<form method="post" name="registration" class="register" asp-controller="Login" asp-action="LogoutPacient">
    <div>
        <input type="submit" value="Logout" class="btn btn-danger" />
    </div>
</form>

